# only search with case sensitivity if there is mixed case
--smart-case
# follow symlinks
--follow

# Template files
--type-add=html=.tmpl

# HAML & SASS
--type-add=ruby=.haml,.sass,.scss
--type-add=html=.haml
--type-add=css=.sass,.scss
--type-set=sass=.sass,.scss

# Less
--type-add=css=.less
--type-set=less=.less

# Stylus
--type-add=css=.styl
--type-set=styl=.styl

# add markdown, textile, and reStructuredText
--type-set=plaintext=.md,.mdown,.markdown,.mkdn,.textile,.rst,.txt
--type-set=docs=.md,.mdown,.markdown,.mkdn,.textile,.rst,.txt

# plain text CSV files
--type-set=csv=.txt,.csv,.tsv

# JSON
--type-set=json=.json
--type-add=js=.json

# Config
--type-set=conf=.conf,.config

--ignore-dir=log
--ignore-dir=tmp
--ignore-dir=vendor
--ignore-dir=public/generated
--sort-files

# NPM Configuration for Node Module
# Machine-specific or sensitive settings should go in ~/.npmrc.local (not version controlled)

# Save exact versions in package.json instead of ranges
save-exact=false

# Automatically save dependencies when installing
save=true

# Use strict engine checks
engine-strict=false

# Progress bar display
progress=true

# Audit level (none, low, moderate, high, critical)
audit-level=moderate

# Update notifier
update-notifier=true

# NOTE: Do NOT add auth tokens or registry credentials here
# Use: npm config set //registry.npmjs.org/:_authToken TOKEN
# Or create ~/.npmrc.local for machine-specific settings

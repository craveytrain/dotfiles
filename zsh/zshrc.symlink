# .zshrc

# source every .zsh file in this repo
for config_file ($DOTFILES/**/*.zsh) do 
	if [[ $config_file == */osx/* ]]; then
		if [[ $OSTYPE == darwin* ]]; then
			source $config_file
		fi
	elif [[ $config_file == */linux/* ]]; then
		if [[ $OSTYPE == linux* ]]; then
			source $config_file
		fi
	else
		source $config_file
	fi
done

# initialize autocomplete here, otherwise functions won't be loaded
autoload -U compinit
compinit

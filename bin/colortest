#! /bin/sh

echo "System colors:"
for color in {0..15} ; do
	if [ ${#color} == 1 ]; then
		spacer="  "
	else
		spacer=" "
	fi
	printf "\033[48;5;${color}m \033[0m \033[38;5;${color}m${color}\033[0m${spacer}"
	if [ $(((color + 1) % 8)) == 0 ] ; then
		echo #New line
	fi
done; echo

echo "Color cube, 6x6:"
for color in {16..231} ; do
	if [ ${#color} == 2 ]; then
		spacer="  "
	else
		spacer=" "
	fi
	printf "\033[48;5;${color}m \033[0m \033[38;5;${color}m${color}\033[0m${spacer}"
	if [ $(((color + 3) % 6)) == 0 ] ; then
		echo #New line
		if [ $(((color + 21) % 36)) == 0 ] ; then
			echo #New line
		fi
	fi
done; echo

echo "Grayscale ramp:"
for color in {232..255} ; do
	printf "\033[48;5;${color}m \033[0m \033[38;5;${color}m${color}\033[0m "
done; echo

exit 0

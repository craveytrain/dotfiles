# .bashrc

# set lang
export LANG=en_US.UTF-8

# shortcut to this dotfiles path is $ZSH
export DOTFILES=$HOME/.dotfiles

# Source global definitions
if [ -f /etc/bashrc ]; then
    . /etc/bashrc
fi

for config_file in $DOTFILES/*/*.bash
do
	. $config_file
done

if [ -f ~/.localrc ]; then
	. ~/.localrc
fi